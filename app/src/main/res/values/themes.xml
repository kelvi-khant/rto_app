<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RTO" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#F3DD1E</item>
        <!-- Customize your theme here. -->
    </style>

<!--    light mode-->

    <style name="SCREEN">

        <item name="android:background">#F8F7F7</item>
    </style>

    <style name="TEXT">

        <item name="android:textColor">#000</item>
    </style>

    <style name="BUTTON">

        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="LINEARLAYOUT">

        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SCROLLVIEW">

        <item name="android:textColor">#F8F6F6</item>
    </style>

    <style name="QUESTION">

        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="FRAGMENT">

        <item name="android:background">#E6E6E6</item>
    </style>
</resources>